@inject IJSRuntime JS

@*
    Only render after connecting to the circuit.
    This prevents the prerender flicker.
*@
@if (isConnected)
{
    <iframe src="https://static.oktaycomu.com/unity-builds/seed-renderer/index.html" id="seedContainer"></iframe>
}

<style>
    #seedContainer {
        display: block;
        height: 100%;
        width: 100%;
        z-index: 0;
    }
</style>

@code {
    private bool isConnected;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            isConnected = true;
            StateHasChanged();
        }
    }
}
